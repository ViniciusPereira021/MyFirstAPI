// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Drinks {
  id          String   @id @unique @default(uuid())
  drinksName  String
  brand       String
  price       String   
  codigo      String    @unique
}

model User {
  id         String   @id @unique @default(uuid())
  firstName  String
  middleName String
  lastName   String
  email      String   @unique
  password   String
  birthDate  DateTime
}